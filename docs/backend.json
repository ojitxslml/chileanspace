{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents the profile of an authenticated user.",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        }
      },
      "required": ["displayName", "email"]
    },
    "CrewMember": {
      "title": "Crew Member",
      "type": "object",
      "description": "Represents a crew member in the habitat.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "role": { "type": "string" },
        "sector": { "type": "string" },
        "vitals": {
          "type": "object",
          "properties": {
            "hr": { "type": "number" },
            "spo2": { "type": "number" },
            "temp": { "type": "number" }
          },
          "required": ["hr", "spo2", "temp"]
        }
      },
      "required": ["id", "name", "role", "sector", "vitals"]
    },
    "Sector": {
      "title": "Sector",
      "type": "object",
      "description": "Represents a sector in the habitat.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "status": { "type": "string" },
        "color": { "type": "string" }
      },
      "required": ["id", "name", "status", "color"]
    },
     "OshiData": {
      "title": "OSHI Data",
      "type": "object",
      "description": "Represents the OSHI data for a crew member.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "role": { "type": "string" },
        "oshiScore": { "type": "number" },
        "status": { "type": "string" },
        "avatar": { "type": "string" },
        "dimensions": {
          "type": "object",
          "properties": {
            "variety": { "type": "number" },
            "balance": { "type": "number" },
            "circadian": { "type": "number" },
            "sensory": { "type": "number" },
            "motivation": { "type": "number" },
            "social": { "type": "number" },
            "meaningful": { "type": a"number" }
          }
        },
        "oshiHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string" },
              "score": { "type": "number" }
            }
          }
        },
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "timestamp": { "type": "string" },
              "type": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      },
      "required": ["id", "name", "role", "oshiScore", "status", "avatar", "dimensions", "oshiHistory", "events"]
    },
    "Provision": {
        "title": "Provision",
        "type": "object",
        "description": "Represents an inventory item.",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "type": { "type": "string" },
            "quantity": { "type": "number" },
            "unit": { "type": "string" },
            "status": { "type": "string" }
        },
        "required": ["id", "name", "type", "quantity", "unit", "status"]
    },
     "Material": {
      "title": "Material",
      "type": "object",
      "description": "Represents a construction material.",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "description": { "type": "string" },
        "details": { "type": "string" },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": { "type": "string" },
              "alt": { "type": "string" },
              "hint": { "type": "string" }
            }
          }
        }
      },
      "required": ["name", "type", "description", "details"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/entities/UserProfile"
          },
          "description": "Stores user profile information."
        }
      },
      {
        "path": "/crew/{crewId}",
        "definition": {
            "entityName": "CrewMember",
            "schema": {
                "$ref": "#/entities/CrewMember"
            },
            "description": "Stores data for each crew member."
        }
      },
      {
          "path": "/sectors/{sectorId}",
          "definition": {
              "entityName": "Sector",
              "schema": {
                  "$ref": "#/entities/Sector"
              },
              "description": "Stores data for each habitat sector."
          }
      },
      {
        "path": "/oshi/{oshiId}",
        "definition": {
          "entityName": "OshiData",
          "schema": {
            "$ref": "#/entities/OshiData"
          },
          "description": "Stores OSHI data for each crew member."
        }
      },
      {
        "path": "/provisions/{provisionId}",
        "definition": {
          "entityName": "Provision",
          "schema": {
            "$ref": "#/entities/Provision"
          },
          "description": "Stores inventory provision data."
        }
      },
      {
        "path": "/materials/{materialId}",
        "definition": {
          "entityName": "Material",
          "schema": {
            "$ref": "#/entities/Material"
          },
          "description": "Stores construction material data."
        }
      }
    ]
  }
}
